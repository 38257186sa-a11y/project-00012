<script>
// Questions and answers (sample with a few entries for brevity; add all)
const quizData = [
    {
        question: "51. Who was the President of the Worldâ€™s Religions at Chicago in which Swami Vivekananda delivered his famous address?",
        options: ["Woodrow Wilson", "Paul Deusen", "John Henry Barrows", "Leo Tolstoy"],
        answer: "John Henry Barrows"
    },
    {
        question: "52. Under which Prime Minister, the 73 and 74 Constitution amendment act was passed?",
        options: ["V. P. Singh", "Morarji Desai", "Atal Bihari Vajpayee", "P. V. Narasimha Rao"],
        answer: "P. V. Narasimha Rao"
    },
    {
        question: "53. Find out the correct statements: A. NITI Aayog like Planning Commission was also created by an executive resolution of the government of India. B. The Consumer Protection Act, 2023 has replaced the earlier Consumer Protection act, 1986. C. The earliest democratic institution for grievance redressal is the Russian Ombudsman. D. The first ARC of India recommended setting up Lokpal and Lokayukta. E. The first ARC of India was headed by Moraji Desai.",
        options: ["A, B, C, E Only", "A, C, D, E only", "A, D, E only", "B, C, D, E only"],
        answer: "A, D, E only"
    },
    {
        question: "54. Identify the correct statements: A. Eighth SAARC Summit held at New Delhi in 1995. B. 1989 was designated as SAARC year of combating drug abuse and drug trafficking. C. There was an assassination attempt on US President Barack Obama while he was in office. D. Bilawal Bhutto Zardari became Prime Minister of Pakistan in March 2024. E. The agreement on SAARC preferential trading arrangement was signed in 11 April, 1993.",
        options: ["A, B, C, only", "B, C, D, only", "C and D only", "A, B, E only"],
        answer: "A, B, E only"
    },
    {
        question: "55. Consider the Article 15 of the constitution of India. The state shall not discriminate against any citizen on grounds of:",
        options: ["B, C only", "A, C, D, only", "B, D only", "A, B, C, D, E"],
        answer: "A, B, C, D, E"
    }
    // ... (continue adding further entries as desired)
];

// Dynamically display quiz
const quizContainer = document.getElementById('quiz');
quizData.forEach((item, index) => {
    const questionDiv = document.createElement('div');
    questionDiv.classList.add('question');
    questionDiv.innerHTML = `<p>${item.question}</p>`;
    
    const optionsDiv = document.createElement('div');
    optionsDiv.classList.add('options');
    
    item.options.forEach(option => {
        const optionHTML = `<label><input type="radio" name="q${index}" value="${option}"> ${option}</label>`;
        optionsDiv.innerHTML += optionHTML;
    });
    
    quizContainer.appendChild(questionDiv);
    quizContainer.appendChild(optionsDiv);
});

const submitBtn = document.getElementById('submitBtn');
const reportBtn = document.getElementById('reportBtn');
let userAnswers = [];

// Submit button logic
submitBtn.onclick = function() {
    userAnswers = [];
    let score = 0;
    quizData.forEach((item, index) => {
        const selected = document.querySelector(`input[name="q${index}"]:checked`);
        userAnswers[index] = selected ? selected.value : null;
        if (selected && selected.value === item.answer) {
            score++;
        }
        // Disable all radio buttons after submission
        document.querySelectorAll(`input[name="q${index}"]`).forEach(input => input.disabled = true);
    });
    document.getElementById('result').textContent = `Your score: ${score} / ${quizData.length}`;
    submitBtn.style.display = 'none';
    reportBtn.style.display = 'inline-block';
};

// Detailed report logic
reportBtn.onclick = function() {
    let reportHtml = '';
    quizData.forEach((item, index) => {
        reportHtml += `<div class="question">
            <strong>Q${index + 1}:</strong> ${item.question}
            <span>Your answer: ${userAnswers[index] !== null ? userAnswers[index] : '<em>Not answered</em>'}</span>
            <span>Correct answer: ${item.answer}</span>
            <span style="color:${userAnswers[index] === item.answer ? 'green' : 'red'};">
                ${userAnswers[index] === item.answer ? "Correct" : "Incorrect"}
            </span>
        </div><hr>`;
    });
    document.getElementById('detailedReport').innerHTML = reportHtml;
    reportBtn.disabled = true; // Disable after once viewed (optional)
};

</script>
</body>
